@model IEnumerable<AERHiPets.Models.GestionAnimal.Veterinaria>

<div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12 fondo textoParrafo centrarContenido">
        @{
            ViewBag.Title = "Veterinarias";
        }
        <h2 class="textoTitulo"><strong>Lista de veterinarias</strong></h2>

        <p>
            @Html.ActionLink("Nueva Veterinaria", "Create")
        </p>
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                    <table class="table" id="myTable">
                        <thead>
                            <tr>
                                <th class="col-sm-3 col-xs-3">
                                    @Html.DisplayNameFor(model => model.nombre)
                                </th>
                                <th class="col-sm-4 col-xs-4">
                                    @Html.DisplayNameFor(model => model.direccion)
                                </th>
                                <th class="col-sm-3 col-xs-3">
                                    @Html.DisplayNameFor(model => model.telefono)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="col-sm-3 col-xs-3">
                                        @Html.DisplayFor(modelItem => item.nombre)
                                    </td>
                                    <td class="col-sm-3 col-xs-3">
                                        @Html.DisplayFor(modelItem => item.direccion)
                                    </td>
                                    <td class="col-sm-3 col-xs-3">
                                        @Html.DisplayFor(modelItem => item.telefono)
                                    </td>
                                    <td class="col-sm-3 col-xs-3">
                                        @Html.ActionLink("Modificar", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Dar de Baja", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
