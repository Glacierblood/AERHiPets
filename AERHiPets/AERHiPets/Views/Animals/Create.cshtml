@model AERHiPets.Models.GestionAnimal.Animal
<div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12 fondo textoParrafo">
        @{
            ViewBag.Title = "Nueva Mascota";
        }

        <h2 class="textoTitulo"><strong>Nueva Mascota</strong></h2>
        @using (Html.BeginForm("Create", "Animals", null, FormMethod.Post, new { enctype = "multipart/form-data", @id = "formulario" }))
                        {
        @Html.AntiForgeryToken()
        <div class="container">
            <div class="row textoParrafo">
                <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                    
                        
                            <div class="form-horizontal">
                                <div class="alert alert-info">
                                    <strong>Completar los datos con asterisco!</strong>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div>
                                
                                <!--DATOS DE REGISTRO DEL ANIMAL-->

                                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12" align="left">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-lg-4 col-md-4 col-sm-4 col-xs-4" })
                                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 form-inline">
                                            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingresar nombre del animal" } })
                                            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                                            *
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.fechaNac, htmlAttributes: new { @class = "control-label col-lg-4 col-md-4 col-sm-4 hidden-xs" })
                                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-10 form-inline">
                                            @Html.EditorFor(model => model.fechaNac, new { htmlAttributes = new { @class = "form-control", @placeholder = "DD/MM/AAAA" } })
                                            @Html.ValidationMessageFor(model => model.fechaNac, "", new { @class = "text-danger" })
                                            *
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="control-label col-lg-4 col-md-4 col-sm-4 hidden-xs">
                                            <label for="especieId">Especie</label>
                                        </div>
                                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-10">
                                            <select class="form-control" id="especieId" name="especieId" placeholder="Seleccionar especie">
                                                <option value=""></option>
                                            </select>
                                        </div>
                                        <a href="~/Especies/Create">Agregar Especie</a>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.razaId, "Raza", htmlAttributes: new { @class = "control-label col-lg-4 col-md-4 col-sm-4 col-xs-4" })
                                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                            @Html.DropDownList("razaId", null, htmlAttributes: new { @class = "form-control", placeholder = "Seleccionar raza" })
                                            @Html.ValidationMessageFor(model => model.razaId, "", new { @class = "text-danger" })
                                        </div>
                                        <a href="~/Razas/Create">Agregar Raza</a>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.tamanioId, "Tamaño", htmlAttributes: new { @class = "control-label col-lg-4 col-md-4 col-sm-4 col-xs-4" })
                                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                            @Html.DropDownList("tamanioId", null, htmlAttributes: new { @class = "form-control", placeholder = "Seleccionar tamaño" })
                                            @Html.ValidationMessageFor(model => model.tamanioId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group form-inline">
                                        @Html.LabelFor(model => model.caracteristicas, htmlAttributes: new { @class = "control-label col-lg-4 col-md-4 col-sm-4 col-xs-4" })
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-4">
                                            @Html.TextAreaFor(model => model.caracteristicas, new { htmlAttributes = new { @class = "form-control", @row = "3", placeholder = "Ingresar breve descripción del animal" } })
                                            @Html.ValidationMessageFor(model => model.caracteristicas, "", new { @class = "text-danger" })
                                            *
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.enAdopcion, htmlAttributes: new { @class = "control-label col-lg-4 col-md-4 col-sm-4 col-xs-4" })
                                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-10">
                                            <div class="checkbox">
                                                @Html.EditorFor(model => model.enAdopcion)
                                                @Html.ValidationMessageFor(model => model.enAdopcion, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Subir Foto", new { @class = "control-label col-lg-4 col-md-4 col-sm-4 hidden-xs" })
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-10">
                                            <input type="file" id="Avatar" name="upload" accept="image/*" />
                                        </div>
                                    </div>
                                </div>

                                <!--IMAGEN-->
                                <div class="col-lg-4 col-md-4 hidden-sm hidden-xs centrarContenido">
                                    <img src="~/img/imagenAdoptar.png" />
                                </div>
                        </div>
                </div>

                <!--BOTON GUARDAR ANIMAL-->
                <div class="container">
                    <div class="row" align="center">
                        <div class="form-group">
                            <div class="col-md-10 centrarContenido">
                                <input type="submit" value="Guardar" class="btn btn-danger btn-lg btn-block set-bk-clr colorBase textoMenu" />
                            </div>
                        </div>
                    </div>
                    <div class="row" align="right">
                        <div class="col-lg-10 col-md-10">
                            @Html.ActionLink("Ir a la lista", "Index")
                        </div>
                        
                    </div>
                </div>
                
                
            </div>
        </div>
        }
    </div>
</div>
           
                     @section Scripts {
                            @Scripts.Render("~/bundles/jqueryval")
                            @Scripts.Render("~/Scripts/DDLRazaEspecie.js")
                            

<script>
    //Para mostrar mensajes de error en español
    //agregar el archivo messages_es.js

    //Para validar desde otras partes del documento usar
    //valid()

    //Para obtener la cantidad de errores usar
    //numberOfInvalids()

    //Aplicar un poco de estilos css

    $(document).ready(function () {
        $("#formulario").validate();

        $("#guargar").click(function (e) {
            e.preventDefault();
            if ($("#formulario").valid() == true) {
                alert("Formulario Correcto");
            }
            else {
                alert($("#formulario").validate().numberOfInvalids() + " errores");
            }
        });
    });
</script>
                        }



                       