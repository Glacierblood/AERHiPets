<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hi Pets!</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/jquery.validate.min.js")
    <link href="~/content/datatables/css/jquery.datatables.min.css" rel="stylesheet" />
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/themes/base/css")
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Shadows+Into+Light+Two|Handlee|Walter+Turncoat|Neucha|Schoolbell' rel='stylesheet' type='text/css'>

</head>
<body data-spy="scroll" data-target=".navbar-fixed-top">
    <div class="navbar-default navbar-inverse navbar-fixed-top scroll-me textoMenu">

        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Hi Pets!", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })


        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @Html.Partial("~/Views/Shared/Partial/_DDLOpciones.cshtml")
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>

    <div id="inicio">
        <div class="overlay">
            @RenderBody()
            <hr />
            <footer>
                <div class="row textoParrafo">
                    <div class="col-lg-4 col-lg-offset-2 col-md-4 col-md-offset-2 col-sm-4 col-sm-offset-2 col-xs-4 col-xs-offset-2 ">
                        <a href="https://www.facebook.com/ongDAAS"><img src="img/logo_facebook.png" alt=""></a>
                        <strong>Facebook DAAS</strong>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 ">
                        <a href="https://twitter.com/daasoficial"><img src="img/logo_twitter.png" alt=""></a>
                        <strong>Twitter DAAS</strong>
                    </div>
                </div>
            </footer>
        </div>
    </div>


    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/Scripts/DatePickerSet.js")
    @Scripts.Render("~/Scripts/scrollReveal.js")


    <script src="~/scripts/datatables/jquery.datatables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable(
                {
                    "oLanguage": {
                        "oAria": {
                            "sSortDescending": " - click/return to sort descending",

                        },
                        'oPaginate': {
                            'sFirst': 'Primero',
                            'sPrevious': 'Anterior',
                            'sNext': 'Siguiente',
                            'sLast': 'Ultimo'
                        },
                        'sProcessing': 'Por favor espere..',
                        'sLengthMenu': 'Items por Pagina _MENU_',
                        'sZeroRecords': 'No data was found', 'sInfo': '_START_ to _END_ of _TOTAL_',
                        'sInfoEmpty': '0 to 0 of 0', 'sInfoFiltered': '(filtered of _MAX_)', 'sInfoPostFix': '',
                        'sSearch': 'Buscar',
                        'sUrl': ''
                    }
                });
        });
    </script>
    @RenderSection("scripts", required: false)
</body>



</html>
